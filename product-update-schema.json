{
  "api_config": {
    "netlify_function": "/.netlify/functions/product-content"
  },
  "updatable_attributes": [
    {
      "attribute_code": "description",
      "label": "Product Description",
      "type": "html",
      "character_limit": 65000,
      "supports_html_conversion": true,
      "placeholder": "<p>Enter full product description...</p>",
      "section": "Content"
    },
    {
      "attribute_code": "short_description",
      "label": "Short Description",
      "type": "html",
      "character_limit": 255,
      "supports_html_conversion": true,
      "placeholder": "Brief product summary",
      "section": "Content"
    },
    {
      "attribute_code": "features",
      "label": "Features Tab",
      "type": "html",
      "character_limit": 65000,
      "supports_html_conversion": true,
      "placeholder": "<ul><li>Feature 1</li><li>Feature 2</li></ul>",
      "section": "Content"
    },
    {
      "attribute_code": "technical_details",
      "label": "Technical Details",
      "type": "html",
      "character_limit": 65000,
      "supports_html_conversion": true,
      "placeholder": "<h3>Specifications</h3><p>Technical info...</p>",
      "section": "Content"
    },
    {
      "attribute_code": "package_content",
      "label": "Package Contents",
      "type": "text",
      "character_limit": 2000,
      "supports_html_conversion": false,
      "placeholder": "1 x Item, 2 x Accessories",
      "section": "Content"
    },
    {
      "attribute_code": "key_specification1",
      "label": "Key Specification 1",
      "type": "text",
      "character_limit": 255,
      "supports_html_conversion": false,
      "placeholder": "e.g., Premium Quality Material",
      "section": "Key Specs"
    },
    {
      "attribute_code": "key_specification2",
      "label": "Key Specification 2",
      "type": "text",
      "character_limit": 255,
      "supports_html_conversion": false,
      "placeholder": "e.g., Fast Delivery Available",
      "section": "Key Specs"
    },
    {
      "attribute_code": "key_specification3",
      "label": "Key Specification 3",
      "type": "text",
      "character_limit": 255,
      "supports_html_conversion": false,
      "placeholder": "e.g., Best Price Guaranteed",
      "section": "Key Specs"
    },
    {
      "attribute_code": "key_specification4",
      "label": "Key Specification 4",
      "type": "text",
      "character_limit": 255,
      "supports_html_conversion": false,
      "placeholder": "e.g., 100% Authentic Products",
      "section": "Key Specs"
    },
    {
      "attribute_code": "meta_title",
      "label": "SEO Page Title",
      "type": "text",
      "character_limit": 70,
      "supports_html_conversion": false,
      "placeholder": "Product Name | Brand | PinkBlue",
      "section": "SEO"
    },
    {
      "attribute_code": "meta_description",
      "label": "SEO Meta Description",
      "type": "text",
      "character_limit": 160,
      "supports_html_conversion": false,
      "placeholder": "Buy product at best prices with fast delivery...",
      "section": "SEO"
    },
    {
      "attribute_code": "meta_keyword",
      "label": "SEO Keywords",
      "type": "text",
      "character_limit": 255,
      "supports_html_conversion": false,
      "placeholder": "dental, product, buy online",
      "section": "SEO"
    },
    {
      "attribute_code": "special_offers",
      "label": "Special Offers Banner",
      "type": "text",
      "character_limit": 500,
      "supports_html_conversion": false,
      "placeholder": "Regular Price: Rs 1000. Get Premium discount!",
      "section": "Marketing"
    },
    {
      "attribute_code": "pdt_tags",
      "label": "Product Tags",
      "type": "text",
      "character_limit": 255,
      "supports_html_conversion": false,
      "placeholder": "Best Buy, Hot Deal, Premium",
      "section": "Marketing"
    }
  ]
}
